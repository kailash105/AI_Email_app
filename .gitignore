# Remove .env files locally
rm backend/.env
rm frontend/.env

# Add .env to .gitignore so they are never tracked again
echo ".env" >> .gitignore
echo "backend/.env" >> .gitignore
echo "frontend/.env" >> .gitignore

# Stage changes
git add .gitignore
git rm --cached backend/.env frontend/.env  # untrack from git

# Commit changes
git commit -m "Remove .env files and add to .gitignore"
